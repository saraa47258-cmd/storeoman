# نوع قاعدة البيانات: 'mysql' أو 'pgsql'
DB_TYPE=pgsql

# إعدادات PostgreSQL (لربط مع postgres-docker)
POSTGRES_HOST=postgres_db
POSTGRES_DB=storeoman
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# إعدادات MySQL (للرجوع للخلف - اختياري)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=storeoman
MYSQL_USER=storeoman_user
MYSQL_PASSWORD=storeoman_pass

# يمكنك تغيير هذه القيم حسب احتياجاتك
# بعد التعديل، انسخ الملف إلى .env:
# cp env.example .env
